<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <AssemblyName>Umbraco.Grail.ContentCartographer</AssemblyName>
    <RootNamespace>Umbraco.Grail.ContentCartographer</RootNamespace>
    <Version>1.0.0</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Description>Content Cartographer - Interactive 3D force-directed graph visualization of Umbraco content relationships powered by Rust WASM</Description>
    <Authors>Umbraco Grail</Authors>
    <OutputType>Library</OutputType>
    <EnableDefaultContentItems>false</EnableDefaultContentItems>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Umbraco.Cms.Core" Version="17.0.0" />
    <PackageReference Include="Umbraco.Cms.Web.Common" Version="17.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <!-- Include App_Plugins files to be copied to consuming projects -->
  <ItemGroup>
    <Content Include="App_Plugins\**\*.*">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <PackagePath>contentFiles\any\any\wwwroot\App_Plugins</PackagePath>
      <PackageCopyToOutput>true</PackageCopyToOutput>
    </Content>
  </ItemGroup>

  <!-- Include WASM artifacts -->
  <ItemGroup>
    <EmbeddedResource Include="../../../engine/grail_core/pkg/**/*" Link="Wasm/%(Filename)%(Extension)" />
  </ItemGroup>
</Project>
